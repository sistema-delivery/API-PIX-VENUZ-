{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    // Tudo que vier em "/" vai para api/index.js
    { "src": "^/$",         "dest": "/api/index.js" },
    // Qualquer rota que comece com /api/ tamb√©m
    { "src": "^/api/(.*)",  "dest": "/api/index.js" }
  ]
}
